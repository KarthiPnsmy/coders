

<%= render :partial=> 'recipes/search_bar'%>

<fieldset>
<legend><b><%=@user.name%>'s Index</b></legend>

<div style="padding-left:20px;">
	<%= link_to "Users Home",  recipes_path%><br />
	<% if @user.user_profile.blank? %>
		<%= link_to "User Profile",  new_user_profile_path%><br />
	<% else %>
		<%= link_to "User Profile",  user_profile_path(@user.user_profile.id)%><br />
	<% end %>
	<%= link_to "Manage Recipes",  new_recipe_path%><br />
	<% if session[:permission]=='admin'%>
		<%= link_to "Add/Remove Sub categories", sub_categories_path %><br />
	<% end %>
</fieldset>










